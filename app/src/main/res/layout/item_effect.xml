<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_add_effect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button3"
        app:backgroundTint="@null"
        app:icon="@drawable/ic_original"
        app:iconGravity="top"
        app:iconTint="@null"
        android:text="@string/original"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:layout_margin="1dp"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/anim_select_effect"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="@+id/btn_add_effect"
        app:layout_constraintBottom_toBottomOf="@+id/btn_add_effect"
        app:layout_constraintStart_toStartOf="@+id/btn_add_effect"
        app:layout_constraintEnd_toEndOf="@+id/btn_add_effect"
        android:visibility="visible"/>
</androidx.constraintlayout.widget.ConstraintLayout>